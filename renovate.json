{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^wpp-connect-addon/config\\.yaml$"
      ],
      "matchStrings": [
        "version:\\s+\"(?<currentValue>v?)(?<version>.*?)\""
      ],
      "depNameTemplate": "wppconnect-team/wppconnect-server",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "wppconnect-team/wppconnect-server",
      "currentValueTemplate": "{{version}}"
    },
    {
      "fileMatch": [
        "^frigate-notify-addon/config\\.yaml$"
      ],
      "matchStrings": [
        "version:\\s+\"(?<currentValue>v.*?)\""
      ],
      "depNameTemplate": "0x2142/frigate-notify",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "0x2142/frigate-notify"
    },
    {
      "fileMatch": ["^selenium-chrome-addon/config\\.yaml$"],
      "matchStrings": [
        "version:\\s+\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "selenium",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "SeleniumHQ/selenium"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["SeleniumHQ/selenium"],
      "matchCurrentVersion": "/(\\d+\\.\\d+\\.\\d+)/",
      "allowedVersions": "/^(?:selenium-)?({{matchCurrentVersion}})$/"
    }
  ]
}